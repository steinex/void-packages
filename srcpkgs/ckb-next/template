# Template file for 'ckb-next'
pkgname=ckb-next
version=20200827
revision=1
wrksrc="ckb-next"
build_style=cmake
configure_args="-DDISABLE_UPDATER=1 -DUDEV_RULE_DIRECTORY=/usr/lib/udev/rules.d"
hostmakedepends="qt5-devel pkg-config"
makedepends="qt5-devel quazip-qt5-devel eudev-libudev-devel $(vopt_if pulseaudio pulseaudio-devel) git qt5-x11extras-devel xcb-util-wm-devel libdbusmenu-qt5-devel qt5-tools-devel"
short_desc="Corsair RGB Driver for Linux"
maintainer="Frank Steinborn <steinex@nognu.de>"
license="GPL-2.0-or-later"
homepage="https://github.com/ckb-next/ckb-next"
build_options="pulseaudio"
desc_option_pulseaudio="Enable support for music visualizer animation"

do_fetch() {
	git clone https://github.com/ckb-next/ckb-next.git ckb-next
	cd ckb-next
}

post_install() {
	vsv ckb-next-daemon
}
